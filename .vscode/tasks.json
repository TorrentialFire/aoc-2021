{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "cpp build active file (cl)",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/std:c++latest",
                "/Fo:..\\bin\\${fileBasenameNoExtension}.obj",
                "/Fd:..\\bin\\${fileBasenameNoExtension}.pdb",
                "/nologo",
                "${file}",
                "/link",
                "/out:..\\bin\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}